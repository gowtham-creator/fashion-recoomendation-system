<!-- including header -->
<%- include('./partials/header.ejs', { first: "Home", second: "sell" }) %>


<!-- main and login form  start -->
<section class="hero-section bg-light py-5">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="card text-dark shadow-lg rounded p-4">
                    <div class="mb-md-5 mt-md-1 pb-1">
                        <h2 class="fw-bold mb-2 text-uppercase">Sign up</h2>
                        <p class="text-dark-50 mb-5">Please enter your details</p>

                        <form action="/signup" method="post">

                            <div class="form-outline form-dark mb-4">
                                <label class="form-label" for="typeNameX">Name</label>
                                <input type="text" id="typeNamex" name="name" class="form-control form-control-lg" />
                            </div>

                            <div class="form-outline form-dark mb-4">
                                <label class="form-label" for="typeEmailX">Email</label>
                                <input type="email" id="typeEmailX" name="email" class="form-control form-control-lg" />
                            </div>

                            <div class="form-outline form-dark mb-4">
                                <label class="form-label" for="typePasswordX">Password</label>
                                <input type="password" id="typePasswordX" name="password" class="form-control form-control-lg" />
                            </div>

                            <button class="btn btn-outline-dark btn-lg px-5" type="submit">Sign Up</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- main and login form  end -->



<!-- including footer -->
<%- include('./partials/footer.ejs') %>
